    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/app.js",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "-d",
                "deploy",
                "development"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug: version",
            "program": "${workspaceFolder}/dist/app.js",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "-d",
                "version"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },

    ]
}